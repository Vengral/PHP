{% extends 'base.html.twig' %}

{% block title %}{{ 'action.sign_in'|trans }}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <h1 class="h3 mb-3 font-weight-normal">{{ 'title.please_sign_in'|trans }} {{ 'label.or' |trans }}
            <a href="{{ url('app_register') }}">{{ 'title.sign_up'|trans }}</a>
        </h1>
        <label for="inputEmail">{{ 'label.email'|trans }}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
               autocomplete="email" required autofocus>
        <label for="inputPassword">{{ 'label.password'|trans }}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            {{ 'action.sign_in'|trans }}
        </button>
    </form>
{% endblock %}
